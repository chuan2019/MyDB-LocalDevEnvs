# Example environment file for MongoDB development
# Copy this to .env and modify as needed

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin123
MONGO_INITDB_DATABASE=devdb

# Single Node Configuration
MONGO_PORT=27017

# Cluster Configuration (Replica Set)
MONGO_PRIMARY_PORT=27017
MONGO_SECONDARY1_PORT=27018
MONGO_SECONDARY2_PORT=27019

# Replica Set Configuration
MONGO_REPLICA_SET_NAME=rs0

# MongoDB Express Configuration
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin123

# Application Database
APP_DATABASE=myapp
APP_USERNAME=appuser
APP_PASSWORD=apppass123

# Backup Configuration
BACKUP_RETENTION_DAYS=7

# Development Settings
MONGO_LOG_LEVEL=info
MONGO_ENABLE_AUTH=true
