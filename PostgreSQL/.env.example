# Example environment file for production-like testing
# Copy this to .env and modify as needed

# PostgreSQL Configuration
POSTGRES_DB=proddb
POSTGRES_USER=appuser
POSTGRES_PASSWORD=SecurePassword123!

# Single Node Configuration
POSTGRES_PORT=5432

# Cluster Configuration
POSTGRES_PRIMARY_PORT=5432
POSTGRES_REPLICA1_PORT=5433
POSTGRES_REPLICA2_PORT=5434

# Replication User
POSTGRES_REPLICATION_USER=replicator
POSTGRES_REPLICATION_PASSWORD=SecureReplication123!

# Load Balancer Ports
POSTGRES_LB_WRITE_PORT=5430
POSTGRES_LB_READ_PORT=5431
HAPROXY_STATS_PORT=8404

# pgAdmin Configuration
PGADMIN_EMAIL=admin@yourcompany.com
PGADMIN_PASSWORD=SecureAdmin123!
PGADMIN_PORT=8080
